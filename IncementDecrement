public class IncrementDecrement {
    public static void main(String[] args) {
        int x = 5;
//        System.out.println(x);
//        x--;  //x-- means x = x-1;
//        System.out.println(x);
//        //This is called a single line comment
//        int y = 7;
//        System.out.println(y);
//        y++;
//        System.out.println(y);
        /* we can comment the whole paragraph by using this */
        System.out.println(x++);
        System.out.println(x);
        System.out.println(x--);
        System.out.println(x);

       int y = 5;
        System.out.println(++y);
        System.out.println(y);
        System.out.println(--y);
        System.out.println(y);

        //x++ is "use x and then increment"
        //++x is "increment x and then use"
        //Similarly
        //y-- is "use y and then decrement"
        //--y is "decrement and then use"
    }
}
